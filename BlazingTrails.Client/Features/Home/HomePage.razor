@page "/"
@inject IMediator Mediator
@inject NavigationManager Navigation

<PageTitle>Blazing Trails</PageTitle>

@if (_trails == null)
{
    <p>Loading trails...</p>
}
else
{
    <TrailDetails Trail="_selectedTrail"/>
    <TrailSearch/>

    @if (_trails.Any())
    {
        <div class="mb-4">
            <p class="fst-italic text-center">
                Do you have an awesome trail you'd like to share? <a href="add-trail">Add it here</a>.
            </p>
        </div>

        <ViewSwitcher>
            <GridTemplate>
                <div class="grid">
                    @foreach (var trail in _trails)
                    {
                        <TrailCard Trail="trail" OnSelected="HandleTrailSelected"/>
                    }
                </div>
            </GridTemplate>
            <TableTemplate>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Length</th>
                        <th>Time</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var trail in _trails)
                    {
                        <tr>
                            <th scope="col">@trail.Name</th>
                            <td>@trail.Location</td>
                            <td>@(trail.Length)km</td>
                            <td>@trail.TimeFormatted</td>
                            <td class="text-end">
                                <button title="View"
                                        @onclick="() => HandleTrailSelected(trail)"
                                        class="btn btn-primary">
                                    <i class="bi bi-binoculars"></i>
                                </button>
                                <button title="Edit"
                                        @onclick="@(() => Navigation.NavigateTo($"/edit-trail/{trail.Id}"))"
                                        class="btn btn-outline-secondary">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </TableTemplate>
        </ViewSwitcher>
    }
    else
    {
        <div class="text-center mt-5">
            <svg viewBox="0 0 16 16" class="bi bi-tree mb-2" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8 0a.5.5 0 0 1 .416.223l3 4.5A.5.5 0 0 1 11 5.5h-.098l2.022 3.235a.5.5 0 0 1-.424.765h-.191l1.638 3.276a.5.5 0 0 1-.447.724h-11a.5.5 0 0 1-.447-.724L3.69 9.5H3.5a.5.5 0 0 1-.424-.765L5.098 5.5H5a.5.5 0 0 1-.416-.777l3-4.5A.5.5 0 0 1 8 0zM5.934 4.5H6a.5.5 0 0 1 .424.765L4.402 8.5H4.5a.5.5 0 0 1 .447.724L3.31 12.5h9.382l-1.638-3.276A.5.5 0 0 1 11.5 8.5h.098L9.576 5.265A.5.5 0 0 1 10 4.5h.066L8 1.401 5.934 4.5z"/>
                <path d="M7 13.5h2V16H7v-2.5z"/>
            </svg>
            <h3 class="text-muted fw-light">We currently don't have any trails, <a href="add-trail">why not add one?</a></h3>
        </div>
    }
}

@code {
    private IEnumerable<Trail>? _trails;
    private Trail? _selectedTrail;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await Mediator.Send(new GetTrailsRequest());

            _trails = response.Trails.Select(t => new Trail
            {
                Id = t.Id,
                Name = t.Name,
                Description = t.Description,
                Location = t.Location,
                Length = t.Length,
                TimeInMinutes = t.TimeInMinutes
            });
        }
        catch (HttpRequestException e)
        {
            Console.WriteLine($"There was a problem loading trail data: {e.Message}");
        }
    }

    private void HandleTrailSelected(Trail trail) => _selectedTrail = trail;
}